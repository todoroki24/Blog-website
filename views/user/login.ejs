<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Minimal Frontend</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f9f9f9;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }
        .container {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
            width: 300px;
        }
        input, button {
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        button {
            background: #007bff;
            color: white;
            cursor: pointer;
            border: none;
        }
        button:hover {
            background: #0056b3;
        }
        .result {
            margin-top: 15px;
            font-size: 14px;
            color: green;
        }
    </style>
</head>
<body>

<div class="container">
    <h2>Login</h2>
    <input type="email" id="email" placeholder="Enter your Email">
    <input type="password" id="password" placeholder="Enter password">
    <button onclick=validateForm(event)>Submit</button>
    <div class="result" id="result"></div>
</div>

<script>
async function validateForm(event)
{
    event.preventDefault();
    const email = document.getElementById('email').value.trim();
    const password = document.getElementById('password').value.trim();

    // Validation
    const emailRegex = /^\S+@\S+\.\S+$/;
    if(!emailRegex.test(email)){
        alert("Invalid Email");
        return;
    }
    if(password.length<6)
    {
        alert("Password length is atleast of 6 characters");
        return;
    }

    // User Information
    const existingUser = {
        email,
        password
    }
    // Sending data of User using fetch
    try{
        const res = await fetch('http://localhost:9696/user/api/login',{
            method : 'POST',
            headers :{
                'Content-Type' : 'application/json',
            },
            credentials : "include",
            body : JSON.stringify(existingUser)
        })
        const data = await res.json()
        if(res.status===200){
            window.location.href = '/user/dashboard';
            return 
        }
        if(res.status===400){
            alert("Email or password is wrong");
            return 
        }
        if(res.status===404){
            alert("User not found");
        }
        if(res.status===401){
            alert("Password does not match");
        }
        if(res.status===500){
            alert('Internal Server error');
        }

    }catch(err){
        console.log(err);
    }
        

   
}
</script>
</body>
</html>
