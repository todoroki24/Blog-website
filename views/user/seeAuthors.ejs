<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Authors List</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 40px;
      background: #f9f9f9;
      color: #333;
    }

    h1 {
      text-align: center;
      color: #444;
      margin-bottom: 20px;
    }

    #authorList {
      list-style: none;
      padding: 0;
      max-width: 400px;
      margin: auto;
    }

    #authorList li {
      background: white;
      margin: 8px 0;
      padding: 12px 15px;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      transition: transform 0.2s ease;
    }

    #authorList li:hover {
      transform: scale(1.03);
      background: #f0f8ff;
    }
  </style>
</head>
<body onload="loadAuthors()">
  <h1>Authors</h1>
  <ul id="authorList"></ul>

  <script>
    const authorList = document.getElementById('authorList')
    const loadAuthors = async () =>{
        let dataOfAuthorsFollowedByUser;
        try{

            const getAuthorsFollowedByUser = await fetch('http://localhost:9696/user/api/getAuthorsFollowedByUser',{
                method : 'GET',
                headers : {
                    'Content-Type' : 'application/json'
                },
                credentials : 'include'
            })
            const data = await getAuthorsFollowedByUser.json();
            dataOfAuthorsFollowedByUser = data.authorsFollowedByUser;
            if(getAuthorsFollowedByUser.status===200){
                console.log(dataOfAuthorsFollowedByUser);
                console.log("Successfully reterived the data of Authors that user follows");
            }
        }catch(error){
            console.log("Error fetching the Authors followed by the User");
        }
        try{
            const res = await fetch('http://localhost:9696/user/api/getAllAuthors',{
                method : 'GET',
                headers : {
                    'Content-Type' : 'application/json'
                },
                credentials : 'include'
            })
            const data = await res.json();
            const authorArray = data.allAuthors;
            if(res.status===200){
                console.log(authorArray)
                renderAuthors(authorArray,dataOfAuthorsFollowedByUser);
            }
        }catch(err){
            alert("Some error has occured while fetching the author");
            console.log(err);
        }
    }
    const renderAuthors = (authorArray,dataOfAuthorsFollowedByUser) =>{
        console.log("render author function call hua")
        authorList.innerHTML = "";
        console.log(authorArray.length);
        console.log(dataOfAuthorsFollowedByUser.followingAuthor.length)
        for(let i=0;i<authorArray.length;i++){
            let buttonInnerText = "Follow";
            let isFollowing = false;
            let li = document.createElement('li');
            for(let j=0;j<dataOfAuthorsFollowedByUser.followingAuthor.length;j++){
                if(authorArray[i]._id===dataOfAuthorsFollowedByUser.followingAuthor[j]._id){
                    console.log("Compare true");
                    isFollowing = true;
                    break;
                }
            }
            console.log("Loop chal rha hai")
            if(isFollowing===true){
                buttonInnerText = "Unfollow";
            }
            li.innerHTML = `   
                    <div>
                        <p>${authorArray[i].fullName}</p>
                        <button onclick="userRequestOnFollowing('${authorArray[i]._id}')" id='${authorArray[i]._id}' class="followUnfollowButton">${buttonInnerText}</button>
                    </div>
            `
            authorList.appendChild(li); 

        }      
    }
    const userRequestOnFollowing = async (authorId) =>{
        const followUnfollowButton = document.getElementById(authorId);
        let follow;
            try{
                const req = await fetch('http://localhost:9696/user/api/followUnfollow',{
                    method : "POST",
                    headers : {
                        'Content-Type' : 'application/json'
                    },
                    credentials : 'include',
                    body : JSON.stringify({
                        request : followUnfollowButton.innerText,
                        authorId
                    })
                })
                const res = await req.json();
                if(req.status===200){
                    if(followUnfollowButton.innerText==='Follow')
                    {
                        followUnfollowButton.innerText = "Unfollow"
                        follow = followUnfollowButton.innerText
                    }else{
                        followUnfollowButton.innerText = 'Follow'
                        follow = followUnfollowButton.innerText
                    }   
                }
            }catch(err){
                console.log(`Unable to ${follow} the author`);
            }
        }
  </script>
</body>
</html>
